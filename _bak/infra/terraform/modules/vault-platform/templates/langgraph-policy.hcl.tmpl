path "${kv_mount_path}/data/session-state/*" {
  capabilities = ["read", "list", "update", "delete"]
}

path "${kv_mount_path}/metadata/session-state/*" {
  capabilities = ["list"]
}

path "${kv_mount_path}/data/story-hooks/*" {
  capabilities = ["read", "list", "update"]
}

path "${kv_mount_path}/data/prompt-packs/*" {
  capabilities = ["read", "list"]
}

path "${transit_mount_path}/sign/${namespace}-story-signing" {
  capabilities = ["update"]
}

path "${transit_mount_path}/verify/${namespace}-story-signing" {
  capabilities = ["update"]
}

path "sys/leases/renew" {
  capabilities = ["update"]
}

path "sys/leases/revoke" {
  capabilities = ["update"]
}
