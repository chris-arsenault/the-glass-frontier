{
  "id": null,
  "title": "Temporal Health Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Workflow Lag (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate({{ lag_metric }}_bucket[5m])) by (le)) * 1000",
          "datasource": {
            "type": "prometheus",
            "uid": "${victoria_datasource}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": ${latency_target_ms}
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "logs",
      "title": "Recent Safety Overrides",
      "targets": [
        {
          "query": "{app=\"moderation\"} |= \"override\" | json",
          "datasource": {
            "type": "loki",
            "uid": "${loki_datasource}"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Remote Tier Rehearsal Outcomes",
      "targets": [
        {
          "expr": "sum by (status) (increase(telemetry_storage_remote_tier_rehearsal_total[30m]))",
          "legendFormat": "{{status}}",
          "datasource": {
            "type": "prometheus",
            "uid": "${victoria_datasource}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "requests",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Remote Tier Fetch Duration (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(telemetry_storage_remote_tier_fetch_duration_ms_bucket[5m])) by (le))",
          "datasource": {
            "type": "prometheus",
            "uid": "${victoria_datasource}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 5000
              },
              {
                "color": "red",
                "value": 15000
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    }
  ],
  "templating": {
    "list": []
  }
}
