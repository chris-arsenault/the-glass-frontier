{
  "name": "@glass-frontier/worldstate",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "migrate": "node-pg-migrate -f ./node-pg-migrate.worldstate.config.cjs up",
    "migrate:up": "node-pg-migrate -f ./node-pg-migrate.worldstate.config.cjs up",
    "migrate:down": "node-pg-migrate -f ./node-pg-migrate.worldstate.config.cjs down",
    "migrate:reset": "node-pg-migrate -f ./node-pg-migrate.worldstate.config.cjs down 0",
    "seed:data": "tsx seed-data/seed-locations.ts",
    "seed:world": "tsx seed-data/seed-world-entities.ts",
    "generate:world-seed": "tsx seed-data/generate-world-seed.ts"
  },
  "keywords": [
    "glass-frontier",
    "worldstate",
    "postgres"
  ],
  "author": "Tsonu",
  "license": "Polyform-Noncommercial-1.0.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@glass-frontier/dto": "workspace:*",
    "node-pg-migrate": "^7.6.1",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10"
  }
}
