{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@glass-frontier/llm-client": ["packages/llm-client/src/index.ts"],
      "@glass-frontier/llm-client/*": ["packages/llm-client/src/*"],
      "@glass-frontier/dto": ["packages/dto/src/index.ts"],
      "@glass-frontier/dto/*": ["packages/dto/src/*"],
      "@glass-frontier/utils": ["packages/utils/src/index.ts"],
      "@glass-frontier/utils/*": ["packages/utils/src/*"],
      "@glass-frontier/node-utils": ["packages/node-utils/src/index.ts"],
      "@glass-frontier/node-utils/*": ["packages/node-utils/src/*"],
      "@glass-frontier/skill-check-resolver": ["packages/skill-check-resolver/src/index.ts"],
      "@glass-frontier/skill-check-resolver/*": ["packages/skill-check-resolver/src/*"],
      "@glass-frontier/app": ["packages/app/src/index.ts"],
      "@glass-frontier/app/*": ["packages/app/src/*"],
      "@glass-frontier/worldstate": ["packages/worldstate/src/index.ts"],
      "@glass-frontier/worldstate/*": ["packages/worldstate/src/*"],
      "@glass-frontier/ops": ["packages/ops/src/index.ts"],
      "@glass-frontier/ops/*": ["packages/ops/src/*"],
      "@glass-frontier/chronicle-api": ["apps/chronicle-api/src/index.ts"],
      "@glass-frontier/chronicle-api/*": ["apps/chronicle-api/src/*"],
      "@glass-frontier/prompt-api": ["apps/prompt-api/src/index.ts"],
      "@glass-frontier/prompt-api/*": ["apps/prompt-api/src/*"],
      "@glass-frontier/location-api": ["apps/location-api/src/index.ts"],
      "@glass-frontier/location-api/*": ["apps/location-api/src/*"],
      "@glass-frontier/playwright": ["apps/playwright/src/index.ts"],
      "@glass-frontier/playwright/*": ["apps/playwright/src/*"],
      "@glass-frontier/gm-api": ["apps/gm-api/src/index.ts"],
      "@glass-frontier/gm-api/*": ["apps/gm-api/src/*"]
    }
  }
}
