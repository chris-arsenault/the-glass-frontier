{
  "name": "the-glass-frontier",
  "version": "0.1.0",
  "packageManager": "pnpm@10.21.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "type": "module",
  "description": "Root project for The Glass Frontier",
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run build:clean",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:css": "pnpm -F ./apps/client run lint:css",
    "lint:css:fix": "pnpm -F ./apps/client run lint:css:fix",
    "test": "turbo run test",
    "clear:data": "tsx scripts/clear-data.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:update-snapshots": "playwright test -u"
  },
  "keywords": [
    "glass-frontier",
    "narrative-engine",
    "langgraph",
    "temporal"
  ],
  "author": "Codex",
  "license": "Polyform-Noncommercial-1.0.0",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.930.0",
    "@aws-sdk/client-s3": "^3.930.0",
    "@aws-sdk/credential-providers": "^3.930.0",
    "@aws-sdk/client-sqs": "^3.930.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "execa": "^9.3.0",
    "wait-on": "^8.0.2",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
