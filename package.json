{
  "name": "the-glass-frontier",
  "version": "0.1.0",
  "private": true,
  "description": "Implementation scaffolding for The Glass Frontier narrative engine and client services.",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "NODE_ENV=development node src/server/index.js",
    "client:dev": "vite",
    "client:build": "vite build",
    "client:preview": "vite preview",
    "test:client": "jest --runInBand __tests__/client",
    "test": "jest --runInBand",
    "test:e2e": "playwright test",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.js",
    "bench:check-runner": "node scripts/benchmarks/checkRunnerBenchmark.js",
    "db:seed:hub-verbs": "node scripts/seedHubVerbs.js",
    "storage:lifecycle": "node scripts/minio/applyLifecycle.js",
    "smoke:langgraph-sse": "node scripts/langgraphSseSmoke.js",
    "stage:smoke": "node scripts/runStageSmoke.js"
  },
  "keywords": [
    "glass-frontier",
    "narrative-engine",
    "langgraph",
    "temporal"
  ],
  "author": "Codex",
  "license": "UNLICENSED",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.51.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "express": "^4.19.2",
    "minio": "^8.0.6",
    "multicast-dns": "^7.2.5",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "undici": "^6.22.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.3.1",
    "axe-html-reporter": "^2.2.11",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pg-mem": "^3.0.5",
    "source-map": "^0.7.6",
    "supertest": "^6.3.4",
    "vite": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.jsx",
      "client/src/**/*.js",
      "client/src/**/*.jsx"
    ]
  }
}
